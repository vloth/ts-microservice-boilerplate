{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "env": { "node": true },
  "rules": {
    "linebreak-style": [ "error", "unix" ],
    "indent": [ "error", 2 ]
    "quotes": [
      "error",
      "single",
      { "avoidEscape": true }
    ],
    "semi": [
      "error",
      "never"
    ],
    "max-len": [
      "error",
      { "code": 100 }
    ]
  }
}
