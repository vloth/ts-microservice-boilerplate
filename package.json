{
  "name": "microservice-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": "19.0.1",
    "yarn": "1.22.19"
  },
  "scripts": {
    "dev": "dotenv -c -- nodemon -q -e ts --watch src --exec 'swc-node src/server | pino-pretty -f -l'",
    "typecheck": "tsc",
    "build": "swc src -d out",
    "start": "node out/server",
    "lint": "eslint src/**/*.ts",
    "test": "mocha 'test/unit/**/*.test.ts'",
    "test:integration": "node resources/scripts/pg-fixture.mjs mocha --colors --exit 'test/integration/**/*.test.ts'",
    "test:coverage": "nyc --reporter html --reporter text yarn test --reporter dot"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.21",
    "@swc/register": "^0.1.10",
    "@types/koa": "^2.13.5",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/lodash": "^4.14.191",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.10",
    "@types/pg": "^8.6.5",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "chalk": "5.1.2",
    "chokidar": "^3.5.3",
    "concurrently": "^7.6.0",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.28.0",
    "fast-check": "^3.3.0",
    "koa2-swagger-ui": "^5.6.0",
    "mocha": "^10.1.0",
    "nodemon": "^2.0.20",
    "nyc": "^15.1.0",
    "ora": "6.1.2",
    "pino-pretty": "^9.1.1",
    "postgres-migrations": "^5.3.0",
    "testcontainers": "^9.0.1",
    "ts-node": "^10.9.1",
    "ts-sinon": "^2.0.2",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.3",
    "zod-fast-check": "^0.8.0"
  },
  "dependencies": {
    "@anatine/zod-openapi": "^1.10.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^12.0.0",
    "lodash": "^4.17.21",
    "openapi3-ts": "^3.1.2",
    "pg": "^8.8.0",
    "pino": "^8.7.0",
    "swagger-injector": "^4.0.1",
    "uuid": "^9.0.0",
    "zod": "^3.19.1"
  }
}
