{
  "name": "microservice-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "dotenv -c -- nodemon -q -e ts --watch src --exec 'node -r @swc-node/register src/server | pino-pretty -f -l'",
    "typecheck": "tsc",
    "build": "swc src -d out",
    "start": "node out/server",
    "lint": "eslint src/**/*.ts",
    "test": "mocha --exclude 'src/test/**/*.ts' 'src/**/*.test.ts'",
    "test:integration": "./resources/scripts/pg-fixture mocha --colors --exit 'src/test/integration/**/*.test.ts'",
    "test:coverage": "nyc --reporter html --reporter text yarn test --reporter dot"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@swc-node/register": "^1.4.2",
    "@swc/cli": "^0.1.55",
    "@swc/core": "^1.2.123",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.5",
    "@types/lodash": "^4.14.178",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.5",
    "@types/node-fetch": "2.x",
    "@types/pg": "^8.6.3",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "chalk": "4.1.2",
    "chokidar": "^3.5.2",
    "concurrently": "^6.5.1",
    "dotenv-cli": "^4.1.1",
    "eslint": "^8.5.0",
    "fast-check": "^2.20.0",
    "koa2-swagger-ui": "^5.3.0",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "ora": "5.4.1",
    "pino-pretty": "^7.3.0",
    "postgres-migrations": "^5.3.0",
    "testcontainers": "^8.1.2",
    "ts-sinon": "^2.0.2",
    "typescript": "^4.5.4",
    "zod-fast-check": "^0.5.0"
  },
  "dependencies": {
    "@anatine/zod-openapi": "^1.1.1",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.1.1",
    "lodash": "^4.17.21",
    "node-fetch": "2.6.6",
    "openapi3-ts": "^2.0.1",
    "pg": "^8.7.1",
    "pino": "^7.6.2",
    "swagger-injector": "^4.0.1",
    "uuid": "^8.3.2",
    "zod": "^3.11.6"
  }
}
